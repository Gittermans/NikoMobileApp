<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:windowBackground">@color/primary_light</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorControlHighlight">@color/accent</item>â€¨
        <item name="android:windowSharedElementsUseOverlay">false</item>

    </style>

    <!--inheriting from dark.actionbar sets the title & icon to color:white-->
    <!-- some more info on the styling jungle: http://www.murrayc.com/permalink/2014/10/28/android-changing-the-toolbars-text-color-and-overflow-icon-color/ -->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar-->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- This property is not applied by the toolbar. Ignored. -->
        <!--<item name="android:textColor">@color/primary_text</item> this property is not applied by the toolbar. Ignored. -->

    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!--textColorPrimary is a theme attribute, it is not a style property
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">@color/white</item>-->
    </style>

    <style name="TextAppearance.Niko.Title" parent="android:TextAppearance.Material.Title">
        <item name="android:textColor">@color/primary_dark</item>
    </style>



</resources>
